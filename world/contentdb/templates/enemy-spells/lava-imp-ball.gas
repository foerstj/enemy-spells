[t:template,n:spell_lava_imp_ball_player]
{
	specializes = base_spell_enemy_spells_combat_magic;

	doc = "spell lava imp ball (player)";
	[common]
	{
		screen_name = "Stinging Firezap";
		description = "Spell of the Lava Mage.";
		[template_triggers]
		{
			[*]
			{
				condition* = receive_world_message("we_dropped");
				action* = call_sfx_script("combat_spell_sparkle");
			}
			[*]
			{
				condition* = receive_world_message("we_req_cast");
				action* = call_sfx_script("lava_imp_ball");
			}
		}
	}
	[gui]
	{
		active_icon		= b_gui_ig_i_ic_sp_es-lava_imp_ball;
		inventory_icon	= b_gui_ig_i_ic_sp_es-lava_imp_ball-inv;
	}
	[magic]
	{
		cast_range = 11;
		cast_reload_delay = 1;
	}
	[spell_default] {}

	[aspect]
	{
		gold_value = 240000;
	}
	[magic]
	{
		required_level = 78;
		max_level = 98;

		mana_cost_modifier = (#magic*2) * 1.2;

		attack_damage_modifier_min = ((#magic*3) * 1.4) * 0.9;
		attack_damage_modifier_max = ((#magic*3) * 1.4) * 1.1;
	}
}
